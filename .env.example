# API Configuration
# Base URL for the backend API (required)
VITE_API_BASE_URL=http://localhost:3000/

# API timeout in milliseconds (default: 10000)
VITE_API_TIMEOUT=10000

# Number of retry attempts for failed requests (default: 3)
VITE_API_RETRY_ATTEMPTS=3

# Delay between retries in milliseconds (default: 1000)
VITE_API_RETRY_DELAY=1000

# Toast Notifications
# Toast notification duration in milliseconds (default: 3000)
VITE_TOAST_DURATION=3000

# Toast position on screen
# Options: top-left, top-right, top-center, bottom-left, bottom-right, bottom-center
# Default: top-right
VITE_TOAST_POSITION=top-right

# Feature Flags
# Enable debug logging in development (default: false)
VITE_ENABLE_DEBUG=false
